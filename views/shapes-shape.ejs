<%- include('partials/header', {title: shape}) -%> 
    <div class="container mt-5">
      <div class="row">
        <div class="col d-flex justify-content-center">
          <h1><%= shape %></h1>
        </div>
      </div>
    </div>

    <div class="container mt-5 pt-5">
      <div class="row d-flex justify-content-center">       
          <% for(let i =0; i<shapeList.length; i+=1){ %>
            <div class="col d-flex justify-content-center">
              <div class="card" style="width: 18rem;">
                <div class="card-body card-bg-color">
                  <h5 class="card-title "><%= shapeList[i].date_time %></h5>
                  <p class="card-text"><%= (shapeList[i].summary).substring(1,100) %></p>
                </div>

                <ul class="list-group list-group-flush ">
                  <li class="list-group-item shape-shape-li"><%= shapeList[i].city %></li>
                  <li class="list-group-item shape-shape-li"><%= shapeList[i].state %> </li>
                  <li class="list-group-item shape-shape-li"><%= shapeList[i].duration %> minutes</li>
                </ul>

                <div class="card-body">
                  <a href="/sighting/<%= index[i]  %>" class="card-link">full post</a>
                </div>

              </div>
            </div>
          <% } %>
      </div>
    </div>

<%- include('partials/footer') -%> 

